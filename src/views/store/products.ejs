<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/store/products.css">
    </head>

    <body>
        <header>
            <%- include('../includes/navigation.ejs') %>
        </header>
        <main>
            <div class="products">
                <% for( const product of products ) { %>
                    <div class="product">
                        <a class="product-link" href="<%= product.page %> ">
                            <%= product.name %>
                        </a>
                        <div class="product-photo">
                            <img src="<%= product.photo %> " alt="Image of <%= product.name %>">
                        </div>
                        <div class="product-price">
                            <!-- Format: #.## -->
                            $<%= product.price.toFixed(2) %>
                        </div>
                        <div class="horizontal-line"></div>
                        <div class="action-btns">
                            <button class="action-btn more-info-btn"
                                onclick="window.location.href='<%= product.page %>'">
                                More info
                            </button>
                            <button class="action-btn add-to-cart-btn" onclick="window.location.href='/cart'">Add to
                                cart</button>
                        </div>
                    </div>
                    <% } %>
            </div>
        </main>

        <%- include('../includes/end.ejs') %>