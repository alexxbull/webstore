{
  "name": "webstore",
  "version": "1.0.0",
  "description": "An e-commerce website where users can browse and checkout merchandise (for demo purposes only).",
  "main": "app.js",
  "scripts": {
    "build": "tsc -w",
    "start": "node dist/server.js",
    "test": "jest --watch",
    "watch": "tsnd --respawn --watch ./**/*.ejs,./public src/server.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexxbull/webstore.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alexxbull/webstore/issues"
  },
  "homepage": "https://github.com/alexxbull/webstore#readme",
  "dependencies": {
    "dotenv": "^8.2.0",
    "ejs": "^3.1.5",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.14",
    "@types/supertest": "^2.0.10",
    "connect-livereload": "^0.6.1",
    "eslint": "^7.15.0",
    "jest": "^26.6.3",
    "livereload": "^0.9.1",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2020": true
    },
    "rules": {
      "newline-per-chained-call": "error"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}